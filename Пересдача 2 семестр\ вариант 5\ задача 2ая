function isBalanced(str) {
let stack = [];

for (let i = 0; i < str.length; i++) {
let char = str[i];

// Если символ - открывающая скобка, добавляем ее в стек
if (char === '(' || char === '[' || char === '{') {
stack.push(char);
}
// Если символ - закрывающая скобка
else if (char === ')' || char === ']' || char === '}') {
// Если стек пуст или верхний элемент стека не соответствует текущей закрывающей скобке,
// значит скобки не сбалансированы
if (stack.length === 0 || !isMatchingPair(stack[stack.length - 1], char)) {
return false;
}
// Если верхний элемент стека соответствует текущей закрывающей скобке,
// удаляем верхний элемент из стека
stack.pop();
}
}

// Если стек пуст, значит все скобки сбалансированы
return stack.length === 0;
}

// Функция для проверки соответствия открывающей и закрывающей скобок
function isMatchingPair(opening, closing) {
if (opening === '(' && closing === ')') {
return true;
}
if (opening === '[' && closing === ']') {
return true;
}
if (opening === '{' && closing === '}') {
return true;
}
return false;
}
